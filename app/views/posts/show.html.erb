<p id="notice"><%= notice %></p>

<div id="singlePost" class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <div class="article-image" style="width: 100%; height: 500px; border-radius: 21px 21px 0 0; background-image: url(<%= url_for(@post.file) %>); background-position: center; background-repeat: no-repeat; background-size: cover;"></div>
    <h1 class="display-5 fw-bold"><%= @post.title %></h1>
    <h5><%= @post.subtitle %></h5>
    <br>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary btn-lg text-light" %>
    <%= link_to "Back", posts_path, class: "btn btn-dark btn-lg text-light" %>
    <br><br>
    <p class="col fs-9" style="font-size: 17px; line-height: 27px;"><%= @post.content %></p>
  </div>
</div>
